{% set slots = data.slots %}
{% if slots is empty %}
    {% include '@SyliusShop/Account/Order/Grid/Field/address.html.twig' with {'data': data.shippingAddress} %}
{% else %}
    {% for slot in slots %}
        {% set shipping_slot = slot.shipment.method.shippingSlotConfig|default(null) %}
        {% if shipping_slot is not null %}
            {{ shipping_slot.name }}
        {% endif %}
    {% endfor %}
{% endif %}
